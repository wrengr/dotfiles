#!/usr/bin/env perl
# This script takes long paths and `ls`es each dir along the way
# wren gayle romano <wren@cpan.org>                 ~ 2008.01.06
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
#
# Most helpful with the -l and -d flags

use warnings;
use strict;

my @Flags;
push @Flags, shift @ARGV
	while @ARGV and $ARGV[0] =~ m/^-(?!-$)/;

exec join ' ', # Doesn't seem to work without the join
	'ls', @Flags, '',
	map {
		my @pieces = split '/', $_;
		map { join '/', @pieces[0..$_] } 0..$#pieces;
	} @ARGV;

__END__
