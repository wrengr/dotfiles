% Definition of this style for slides.
\newcommand{\TPFrame}[1]
{
  % Main gradient
  \ifisDraft
  \else
  \psframe[linestyle=none, fillstyle=gradient, 
  gradbegin=fymafaintblue,gradend=white,gradmidpoint=0](-0.37,-0.77)(11.97,8.47)
  \fi
  % Top line
  \psframe[linestyle=none,fillstyle=solid,linewidth=2pt,fillcolor=fymalightblue](-0.5,8.5)(12.1,8.4)

  % Top left cross
  \psframe[linestyle=none,fillstyle=solid,linewidth=2pt,fillcolor=fymalightblue](-0.4,8.6)(-0.3,8.25)
  % Top right cross
  \psframe[linestyle=none,fillstyle=solid,linewidth=2pt,fillcolor=fymalightblue](11.9,8.6)(12.0,8.25)

  % Bottom line
  \psframe[linestyle=none,fillstyle=solid,linewidth=2pt,fillcolor=fymalightblue](-0.5,-0.8)(12.1,-0.7)

  % Bottom left blue rectangle
  %\psframe[linestyle=none,fillstyle=solid,linewidth=2pt,fillcolor=fymalightblue](-1.4,-1.2)(0.4,-0.7)

  % Bottom left cross
  \psframe[linestyle=none,fillstyle=solid,linewidth=2pt,fillcolor=fymalightblue](-0.4,-0.9)(-0.3,-0.55)

  % Bottom right cross
  \psframe[linestyle=none,fillstyle=solid,linewidth=2pt,fillcolor=fymalightblue](11.9,-0.9)(12,-0.55)

  {\fymadarkblue \small \PutLogo} % Mandatory 
  {#1}
}

\NewSlideStyle{t}{5.5,2.9}{TPFrame}
