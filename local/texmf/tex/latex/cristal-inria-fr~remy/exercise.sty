\def \exo@next@end {\csname end\exo@answer@env\endcsname
                \expandafter \endgroup \ignorespaces}
\bgroup
\catcode `\|=0 \catcode `\{=12 \catcode `\}=12
\catcode `\[=1 \catcode `\]=2  \catcode`\\=12

|gdef |ans@dotest#1\end{#2}#3|END[%
